mixin form-search(keyword)
    form(id="form-search")
        .input-group
            input(
                type= "text"
                placeholder= "Nhập từ khóa"
                name= "keyword"
                class= "form-control"
                value= keyword
            )
            .input-group-append
                button(
                    class= "btn btn-success ms-2"
                    type= "submit"
                ) Tìm kiếm