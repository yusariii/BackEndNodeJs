extends ../../layouts/default.pug
include ../../mixins/filter-button.pug
include ../../mixins/form-search.pug
block main 
    h1 Products

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body  
            .row 
                .col-6
                    +filter-button(filterButton) 
                .col-6 
                    +form-search(keyword)


    .card.mb-3 
        .card-header Sản phẩm
        .card-body 
            table.table.table-hover.table-sm
                thead 
                    tr 
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                    
                tbody 
                    if (products.length > 0)
                        each item, index in products
                            tr 
                                td #{index + 1}
                                td 
                                    img(src=item.thumbnail 
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    a(href="#" 
                                        class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                        style="text-decoration: none;"
                                    )
                                        | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                td 
                                    button(class="btn btn-warning btn-sm") Sửa
                                    button(class="btn btn-danger btn-sm ms-1") Xóa
                    else  
                        tr
                            td(colspan="6" class="text-center") 
                                p(class="mt-3 mb-3") Không tồn tại sản phẩm nào.
    
    nav 
        ul(class="pagination")
            li(class="page-item")
                button(class="page-link") Trang trước
            li(class="page-item")
                button(class="page-link") 1
            li(class="page-item")
                button(class="page-link active") 2
            li(class="page-item")
                button(class="page-link") 3
            li(class="page-item")
                button(class="page-link") Kế tiếp