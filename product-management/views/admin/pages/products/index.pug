extends ../../layouts/default.pug
include ../../mixins/filter-button.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/no-perm.pug
include ../../mixins/formatDate.pug
block main 
    if (role.permissions.includes("products_view"))

        h1(class="mb-3") #{pageTitle}

        +alert-success(5000)

        

        .card.mb-3 
            .card-header Bộ lọc và tìm kiếm 
            .card-body  
                .row 
                    .col-6
                        +filter-button(filterButton) 
                    .col-6 
                        +form-search(keyword)
                .row 
                    .col-4 
                        +sort()

        .card.mb-3 
            .card-header Sản phẩm
            .card-body 
                .row(class="mb-3")
                    .col-8
                        if (role.permissions.includes("products_edit"))
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                    .col-4.text-end
                        if (role.permissions.includes("products_create"))
                            a(href=`${prefixAdmin}/products/create`
                                class="btn btn-outline-success"
                            ) + Thêm sản phẩm
        

                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkAll")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Hành động
                        
                    tbody 
                        if (products.length > 0)
                            each item, index in products
                                tr 
                                    td(class="align-middle") 
                                        input(type="checkbox" name="checkItem" value=item.id)
                                    td(class="align-middle") #{pagination.limitItems * (pagination.currentPage - 1) + index + 1}
                                    td(class="align-middle text-center") 
                                        img(src=item.thumbnail 
                                            alt=item.title
                                            class="product-img"
                                        )
                                    td(class="align-middle") #{item.title}
                                    td(class="align-middle") #{item.price}$
                                    td(class="align-middle")
                                        input(
                                            type="number"
                                            value=item.position 
                                            min="1"
                                            name="position"
                                            style="width: 60px;"
                                        )
                                    td(class="align-middle") 
                                        if (role.permissions.includes("products_edit"))
                                            a(href="javascript:;" 
                                                data-status=item.status
                                                data-id=item.id
                                                button-change-status
                                                class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                                style="text-decoration: none;"
                                            )
                                                | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                        else 
                                            a(
                                                class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                                style="text-decoration: none;"
                                            )
                                                | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                    td(class="align-middle") 
                                        p #{item.accountFullName}
                                        if (item.accountFullName)
                                            p 
                                                +formatDateTime(item.createdBy.createdAt)
                                    td(class="align-middle") 
                                        a(
                                            href=`${prefixAdmin}/products/detail/${item.id}` 
                                            class="btn btn-info btn-sm") Chi tiết
                                        if (role.permissions.includes("products_edit"))
                                            a(
                                                href=`${prefixAdmin}/products/edit/${item.id}` 
                                                class="btn btn-warning btn-sm ms-1") Sửa
                                        if (role.permissions.includes("products_delete"))
                                            button(
                                                class="btn btn-danger btn-sm ms-1"
                                                data-id=item.id 
                                                button-delete
                                                ) Xóa
                        else  
                            tr
                                td(colspan="8" class="text-center") 
                                    p(class="mt-3 mb-3") Không tồn tại sản phẩm nào.
        
        
        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-delete-record"
            data-path=`${prefixAdmin}/products/delete`
        )

    else 
        +no-perm-home(pageTitle)
