extends ../../layouts/default.pug
include ../../mixins/filter-button.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug

block main 
    h1 Products

    +alert-success(5000)

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body  
            .row 
                .col-6
                    +filter-button(filterButton) 
                .col-6 
                    +form-search(keyword)


    .card.mb-3 
        .card-header Sản phẩm
        .card-body 
            .row(class="mb-3")
                .col-8
                    +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                .col-4.text-end
                    a(href=`${prefixAdmin}/products/create`
                        class="btn btn-success"
                    ) + Thêm sản phẩm

            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(type="checkbox" name="checkAll")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Hành động
                    
                tbody 
                    if (products.length > 0)
                        each item, index in products
                            tr 
                                td 
                                    input(type="checkbox" name="checkItem" value=item.id)
                                td #{pagination.limitItems * (pagination.currentPage - 1) + index + 1}
                                td 
                                    img(src=item.thumbnail 
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td
                                    input(
                                        type="number"
                                        value=item.position 
                                        min="1"
                                        name="position"
                                        style="width: 60px;"
                                    )
                                td 
                                    a(href="javascript:;" 
                                        data-status=item.status
                                        data-id=item.id
                                        button-change-status
                                        class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                        style="text-decoration: none;"
                                    )
                                        | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                td 
                                    a(
                                        href=`${prefixAdmin}/products/detail/${item.id}` 
                                        class="btn btn-info btn-sm") Chi tiết
                                    a(
                                        href=`${prefixAdmin}/products/edit/${item.id}` 
                                        class="btn btn-warning btn-sm ms-1") Sửa
                                    button(
                                        class="btn btn-danger btn-sm ms-1"
                                        data-id=item.id 
                                        button-delete
                                        ) Xóa
                    else  
                        tr
                            td(colspan="8" class="text-center") 
                                p(class="mt-3 mb-3") Không tồn tại sản phẩm nào.
    
     
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    )

    form(
        action=""
        method="POST"
        id="form-delete-product"
        data-path=`${prefixAdmin}/products/delete`
    )

    script(src="/admin/js/products.script.js")