extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/back-button.pug
include ../../mixins/select-tree.pug
include ../../mixins/no-perm.pug
block main 
    if (role.permissions.includes("products_create"))

        +alert-error(5000)

        +back-button()

        h1(class="mb-3") #{pageTitle}

        form(
            action=`${prefixAdmin}/products/create`
            method="POST"
            id="form-create-record"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                    type="text" 
                    class="form-control mb-2"
                    name="title" 
                    id="title"
                    required
                )
            div(class="form-group")
                label(for="category_id") Danh mục
                select(
                    name="category_id"
                    id="category_id"
                    class="form-control mb-2"
                )
                    option(value="" selected disabled) -- Chọn danh mục --
                        if category 
                            +select-tree(category)
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input mb-2"
                    id="featured1"
                    name="featured"
                    value="1"       
                )
                label(
                    class="form-check-label"
                    for="featured1"
                ) Nổi bật
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input mb-2"
                    id="featured0"
                    name="featured"
                    value="0"
                    checked
                )
                label(
                    class="form-check-label"
                    for="featured"
                ) Không nổi bật
            div(class="form-group")
                label(for="desc") Mô tả
                textarea(
                    class="form-control textarea-mce mb-2"
                    name="description" 
                    id="desc"
                    rows="4"
                )
            div(class="form-group")
                label(for="price") Giá
                input(
                    type="number" 
                    class="form-control mb-2"
                    name="price" 
                    id="price"
                    min="0"
                    required
                )
            div(class="form-group")
                label(for="discount") % Giảm giá
                input(
                    type="number" 
                    class="form-control mb-2"
                    name="discountPercentage" 
                    id="discount"
                    min="0"
                    required
                )
            div(class="form-group")
                label(for="stock") Số lượng
                input(
                    type="number" 
                    class="form-control mb-2"
                    name="stock" 
                    id="stock"
                    min="0"
                    required
                )
            div(class="form-group")
                label(for="thumbnail") Hình ảnh
                input(
                    type="file" 
                    class="form-control-file mb-2"
                    name="thumbnail" 
                    id="thumbnail"
                    accept="image/*"
                    style="display: block;"
                    upload-image-input
                )
                img(
                    id="img-preview" 
                    src="#" 
                    alt="Image Preview" 
                    class="img-preview"
                    upload-image-preview
                )
                //- input(
                //-     type="text" 
                //-     class="form-control mb-2"
                //-     name="thumbnail" 
                //-     id="thumbnail"
                //- )
            div(class="form-group")
                label(for="position") Vị trí
                input(
                    type="number" 
                    class="form-control mb-2"
                    name="position" 
                    id="position"
                    placeholder= "Tự động tăng"
                    min="1"
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input mb-2"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(
                    class="form-check-label"
                    for="statusActive"
                ) Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input mb-2"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                )
                label(
                    class="form-check-label"
                    for="statusInactive"
                ) Dừng hoạt động
            div(class="form-group")
                button(
                    type="reset"
                    class="btn btn-danger me-2"
                    reset-button
                ) Nhập lại
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Thêm sản phẩm
    
    else 
        +no-perm-home(pageTitle)
