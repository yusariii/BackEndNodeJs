extends ../../layouts/default.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)

    h1(class="mb-3") Tài khoản

    .card.mb-3
        .card-header Danh sách
        .card-body 
            .row 
                .col-8 
                .col-4.text-end
                    a(
                        href=`${prefixAdmin}/accounts/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới

            table(
                class="table table-hover table-sm"
            )
                thead 
                    tr 
                        th STT
                        th Ảnh đại diện
                        th Họ và tên
                        th Phân quyền
                        th Email
                        th Trạng thái
                        th Hành động
                    
                tbody 
                    if (records.length > 0)
                        each item, index in records
                            tr 
                                td #{pagination.limitItems * (pagination.currentPage - 1) + index + 1}
                                td
                                    img(
                                        class="avatar"
                                        src=item.avatar
                                        alt=item.fullName
                                        )
                                td #{item.fullName}
                                td #{item.role.title}
                                td #{item.email}
                                td 
                                    a(href="javascript:;" 
                                        data-status=item.status
                                        data-id=item.id
                                        button-change-status
                                        class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                        style="text-decoration: none;"
                                    )
                                        | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                td 
                                    a(
                                        href=`${prefixAdmin}/accounts/detail/${item.id}` 
                                        class="btn btn-info btn-sm") Chi tiết
                                    a(
                                        href=`${prefixAdmin}/accounts/edit/${item.id}` 
                                        class="btn btn-warning btn-sm ms-1") Sửa
                                    button(
                                        class="btn btn-danger btn-sm ms-1"
                                        data-id=item.id 
                                        button-delete
                                        ) Xóa
                    else  
                        tr
                            td(colspan="8" class="text-center") 
                                p(class="mt-3 mb-3") Không tồn tại tài khoản nào.
    
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/accounts/change-status`
    )

    form(
        action=""
        method="POST"
        id="form-delete-record"
        data-path=`${prefixAdmin}/accounts/delete`
    )
