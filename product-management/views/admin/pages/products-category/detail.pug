extends ../../layouts/default.pug
include ../../mixins/back-button.pug
block main 

    +back-button()

    .card
        .card-header 
            div(class="d-flex justify-content-between align-items-center")
                h1 #{record.title}
                if (role.permissions.includes("products-category_edit"))
                    a(href=`${prefixAdmin}/products-category/edit/${record.id}` class="btn btn-warning btn-sm") Sửa
        .card-body
            if record.thumbnail
                img(src=record.thumbnail alt=record.title width="200px")
            if record.description
                p !{record.description}
            p Vị trí: <b>#{record.position}</b>
            p Trạng thái: 
                if record.status === 'active'
                    span(class="badge bg-success") Hoạt động
                else if record.status === 'inactive'
                    span(class="badge bg-danger") Dừng hoạt động
