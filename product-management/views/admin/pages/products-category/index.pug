extends ../../layouts/default.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/pagination.pug
block main 
    h1 Category

    .card.mb-3 
        .card-header Danh mục sản phẩm
        .card-body 
            .row(class="mb-3")
                .col-8
                    +form-change-multi(`${prefixAdmin}/products-category/change-multi?_method=PATCH`)
                .col-4.text-end
                    a(href=`${prefixAdmin}/products-category/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới
            

            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(type="checkbox" name="checkAll")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái
                        th Hành động
                    
                tbody 
                    if (records.length > 0)
                        each item, index in records
                            tr 
                                td 
                                    input(type="checkbox" name="checkItem" value=item.id)
                                td #{pagination.limitItems * (pagination.currentPage - 1) + index + 1}
                                td 
                                    img(src=item.thumbnail 
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td
                                    input(
                                        type="number"
                                        value=item.position 
                                        min="1"
                                        name="position"
                                        style="width: 60px;"
                                    )
                                td 
                                    a(href="javascript:;" 
                                        data-status=item.status
                                        data-id=item.id
                                        button-change-status
                                        class=`badge ${item.status === "active" ? "bg-success" : "bg-danger"}`
                                        style="text-decoration: none;"
                                    )
                                        | #{item.status === "active" ? "Hoạt động" : "Dừng hoạt động"}
                                td 
                                    a(

                                        class="btn btn-info btn-sm") Chi tiết
                                    a(

                                        class="btn btn-warning btn-sm ms-1") Sửa
                                    button(
                                        class="btn btn-danger btn-sm ms-1"
                                        data-id=item.id 
                                        button-delete
                                        ) Xóa
                    else  
                        tr
                            td(colspan="8" class="text-center") 
                                p(class="mt-3 mb-3") Không tồn tại danh mục nào.
    
     
    +pagination(pagination)

