extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row 
            .col-12 
                +box-head(pageTitle)

        .row.mb-3 
            .col-12 
                a(
                    href="/room-chat/create"
                    class="btn btn-success"
                ) Tao phong chat 
        
        .row 
            each roomChat in listRoomChat
                .col-6 
                    div(class="box-room")
                        div(class="inner-avatar")
                            img(
                                src="#"
                                alt=roomChat.title
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{roomChat.title}
                            div(class="inner-buttons") 
                                a(
                                    href=`/chat/${roomChat.id}`
                                    class="btn btn-primary"
                                ) Nhan tin
            