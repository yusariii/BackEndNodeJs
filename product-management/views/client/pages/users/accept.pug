extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/products-layout.pug

block main
    .container.my-3

        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head(pageTitle)
        
        .row(data-users-accept=user.id)
            each user in users
                .col-6
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/client/image/avatar_default.jpg")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary me-1"
                                    btn-friend-accept=user.id
                                    ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary"
                                    btn-friend-refuse=user.id
                                    ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary"
                                    btn-friend-deleted 
                                    disable
                                    ) Đã xóa
                                button(
                                    class="btn btn-sm btn-primary"
                                    btn-friend-accepted
                                    disable
                                    ) Đã chấp nhận

block script 
    script(src="/client/js/users.js")
        