extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/products-layout.pug

block main
    .container.my-3

        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head(pageTitle)

        .row(data-users-all=user.id)
            each user in users
                .col-6(user-send-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/client/image/avatar_default.jpg")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary"
                                    btn-add-friend=user.id
                                    ) Kết bạn
                                button(
                                    class="btn btn-sm btn-secondary"
                                    btn-cancel-friend=user.id
                                    ) Hủy
    
block script 
    script(src="/client/js/users.js")
        