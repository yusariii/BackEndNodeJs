extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/back-button.pug
include ../../mixins/alert.pug
block main 

        .container.my-3
                .row 
                    .col-12 
                        +back-button()
                        +box-head(pageTitle)
                .row 
                    .col-3 
                    .col-6
                        form(
                            action=`/user/info/edit?_method=PATCH`
                            method="POST"
                            enctype="multipart/form-data"
                            id="form-edit-user"
                        )
                            div(class="form-group")
                                label(for="fullName") Họ và tên
                                input(
                                    type="text" 
                                    class="form-control mb-2"
                                    name="fullName" 
                                    id="fullName"
                                    value=user.fullName
                                    required
                                )
                            div(class="form-group")
                                label(for="email") Email
                                input(
                                    type="text"
                                    class="form-control mb-2"
                                    name="email" 
                                    id="email"
                                    value=user.email
                                    required
                                )
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text"
                                    class="form-control mb-2"
                                    name="phone" 
                                    id="phone"
                                    value=user.phone
                                    required
                                )
                            div(class="form-group")
                                label(for="address") Địa chỉ
                                input(
                                    type="text"
                                    class="form-control mb-2"
                                    name="address" 
                                    id="address"
                                    value=user.address
                                    required
                                )
                            div(class="form-group")
                                label(for="avatar") Ảnh đại diện
                                input(
                                    type="file" 
                                    class="form-control-file mb-2"
                                    name="avatar" 
                                    id="avatar"
                                    accept="image/*"
                                    style="display: block;"
                                    upload-image-input
                                )
                                img(
                                    id="img-preview" 
                                    src=user.avatar ? user.avatar : "#"
                                    alt="Image Preview" 
                                    class="img-preview"
                                    upload-image-preview
                                )
                            div(class="form-group")
                                button(
                                    type="reset"
                                    class="btn btn-danger me-2"
                                    reset-button
                                ) Nhập lại
                                button(
                                    type="submit"
                                    class="btn btn-primary"
                                ) Cập nhật